
        <div class="col-md-8 col-md-offset-1">

            <div id="app">
                <h1>新建文章</h1>
                <div class="form-group">
                    <input type="text"  class="form-control" v-model="title" placeholder="输入文字标题">                    
                </div>
                <div class="form-group">
                    <textarea   cols="30" rows="3" class="form-group" v-model="content" placeholder="请输入内容"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-default" v-on:click="submit">提交</button>
                </div>
            </div>
        </div>
    </div>
        <script>
            var vm = new Vue({
            el:'#app',
            data:{
                title:'',
                content:''
            },
            methods:{
                submit(){
                    axios.post('/api/v1/posts',{
                        title:vm.title,
                        content:vm.content
                    }).then((response)=>{
                        return response.data;
                    }).then((data)=>{
                        //notice:
                        window.location = '/posts/show/'+data.posts._id
                    }).catch(function(err){
                            alert(err.response.data.error);}
                    )}
            }
        });
    </script>